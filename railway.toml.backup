[build]
builder = "NIXPACKS"
buildCommand = "npm install && npm run railway:setup && npm run build:web"

[deploy]
startCommand = "npm run start:web"
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10

[env]
NODE_ENV = "production"
PORT = "3000"

[services.web]
build.buildCommand = "npm install && npm run railway:setup && npm run build:web"
deploy.startCommand = "npm run start:web"

[services.api]
source = "apps/api"
build.buildCommand = "npm install && npm run build"
deploy.startCommand = "npm start"