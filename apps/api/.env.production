# Environment
NODE_ENV=production
PORT=3001

# Database (Railway will provide this automatically)
DATABASE_URL="${DATABASE_URL}"

# JWT Secrets (must be set in Railway environment variables)
JWT_SECRET="${JWT_SECRET}"
JWT_REFRESH_SECRET="${JWT_REFRESH_SECRET}"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS - Allow Railway frontend and API domains
ALLOWED_ORIGINS="https://projectmgmt-web-production.up.railway.app,https://projectmgmt-api-production.up.railway.app,http://localhost:3000"

# Email Configuration (set in Railway environment variables)
EMAIL_FROM="${EMAIL_FROM}"
SMTP_HOST="${SMTP_HOST}"
SMTP_PORT="${SMTP_PORT}"
SMTP_SECURE="${SMTP_SECURE}"
SMTP_USER="${SMTP_USER}"
SMTP_PASS="${SMTP_PASS}"

# File Storage
STORAGE_PROVIDER="local"
UPLOAD_DIR="./uploads"

# AWS S3 (optional - if using S3 storage)
S3_BUCKET="${S3_BUCKET}"
S3_REGION="${S3_REGION}"
S3_ACCESS_KEY_ID="${S3_ACCESS_KEY_ID}"
S3_SECRET_ACCESS_KEY="${S3_SECRET_ACCESS_KEY}"

# Redis (Railway will provide this automatically)
REDIS_URL="${REDIS_URL}"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="${SESSION_SECRET}"